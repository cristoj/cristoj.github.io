{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node", "jsdom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "__tests__/**/*",
    "__tests_extra__/types/**/*",
    "src/**/*"
  ]
}
